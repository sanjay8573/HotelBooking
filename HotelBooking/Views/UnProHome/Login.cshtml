@model HotelBooking.Model.LoginRequestModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Hotels:I-Manage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="css/login-new.css" rel="stylesheet" />
</head>
<body class="home-intro">
   <section class="login-form-wrap">
        <h1>Login</h1>
        <p>Sign in using your registered account</p>
        <div class="login-form">
            @using (Html.BeginForm("LoginSubmit", "UnProHome", FormMethod.Post))
            {

                <div class="aspNetHidden">
                    <input type="hidden" />
                </div>
                <div class="aspNetHidden">
                    <input type="hidden" name="" />
                    <input type="hidden" name="" />
                </div>
                <label>
                    @Html.TextBoxFor(model => model.Username, new { @class = "required email", placeholder = "Email ID as user Name", maxlength = "200", type = "email" })

                </label>
                <label>
                    @Html.PasswordFor(model => model.Password, new { @class = "required", placeholder = "Password", maxlength = "200", type = "password" })

                </label>
               
                <input type="submit" name="btnLogin" value="Login" id="btnLogin" />
                <span id="lblMsg" style="color:white;">@ViewBag.ErrorMessage</span>
            }
        </div>
    </section>
</body>
</html>
<script src="~/js/jquery-3.3.1.js" type="text/javascript"></script>
<script type="text/javascript">
    function randomImage() {
        
        var images = [
            'images/bg1.jpg',
            'images/bg2.jpg',
            'images/bg3.jpg',
            'images/bg4.jpg',
            'images/bg5.jpg',
            'images/bg6.jpg'];
        var size = images.length;
        var x = Math.floor(size * Math.random());
        console.log(x);
        var element = document.getElementsByClassName('home-intro');
        console.log(element);
        element[0].style["background-image"] = "url(" + images[x] + ")";
    }
    document.addEventListener("DOMContentLoaded", randomImage);
</script>



