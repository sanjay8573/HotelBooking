@model HotelBooking.Model.Hall.HallBooking
@{
    ViewBag.Title = "Print Hall Booking";
}

<div class="row" id="PrintHallBooking">
    <div class="col-sm-12">
        <div class="card widget-container" id="BookingFirstPage">
