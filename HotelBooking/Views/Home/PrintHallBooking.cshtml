                    <input type="text" id="txtCustomerEmail" class="full-width" value="@Model.CustomerEmail" placeholder="Customer Email" readonly="readonly" maxlength="150" runat="server">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pull-left">
                    <label for="edit-mail" class="form-required">Customer Phone</label>
                    <input type="text" id="txtCustomerPhone" class="full-width" value="@Model.CustomerPhone" placeholder="Customer Phone Number" readonly="readonly" maxlength="15" runat="server">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pull-left">
                    <label for="edit-mail" class="form-required">Number of Person</label>
                    <input type="text" id="txtNPax" class="full-width" value="@Model.Number_Of_Person" placeholder="Number of Person" readonly="readonly" maxlength="15" runat="server">
