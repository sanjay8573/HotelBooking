@model HotelBooking.Model.Floor
@{
    ViewBag.Title = "Manage Floors";
}

@{ 
    Model.BranchId = ViewBag.branchId;
}
<h2>Mangae Floors</h2>
<body>
    @using (Html.BeginForm("SaveFloor", "Home", FormMethod.Post))
    {
        <table class="table table-bordered table-striped">
            <tr>
                <td>@Html.LabelFor(model => model.FloorNumber, new { @class = "control-label" })</td>
                <td>@Html.TextBoxFor(model => model.FloorNumber, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Description, new { @class = "control-label" })</td>
                <td>@Html.TextBoxFor(model => model.Description, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.isActive, new { @class = "control-label" })</td>
                <td>@Html.CheckBoxFor(model => model.isActive)</td>
                @Html.HiddenFor(model=>model.BranchId)
            </tr>

            

            
        </table>
        <button type="submit" class="btn btn-primary">Save</button>
    }
   

    
</body>

