</table>





@if (ViewBag.NOR != null)
{
    for (int i = 1; i <= ViewBag.NOR; i++)
    {
        var divName = "ViewEditPerDayPrice" + i;
        <div class="modal fade" id="@divName" role="dialog"><h2></h2></div>
