@model IEnumerable<HotelBooking.Model.Reatraurant.ImageMaster>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    .carousel-inner img {
        width: 100%;
        height: 350px;
    }
</style>
<div class="container py-4">
    <div class="col-md-8 col-md-offset-2">
        <div id="imageCarousel" class="carousel slide" data-interval="500" data-ride="carousel" data-pause="hover" data-wrap="true">


            @if (Model != null)
            {

                var i = 0;
                var k = 0;
                <ol class="carousel-indicators">
                    @foreach (var rt in Model)
                    {
                        var active = i == 1 ? "active" : "";

                        <li data-target="#imageCarousel" data-slide-to="@i" class="@active"></li>

                        i++;
                    }

                </ol>

                <div class="carousel-inner role="listbox"">
                    @foreach (var rt in Model)
                    {
                        k++;
                        var active = k == 1 ? "active" : "";
                        
                            <div class="carousel-item @active">
                                <img  src="data:image/*;base64,@(Convert.ToBase64String(rt.ImageData))"  alt="">
                            </div>
                        

                    }

                </div>

            }
            <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                <span class="glyphicon glyphicon-hand-left"></span>
            </a>
            <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                <span class="glyphicon glyphicon-hand-right"></span>
            </a>
        </div>



    </div>
    </div>

