
@{
    ViewBag.Title = "SetCurrencyExchnage";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card widget-container">
            <div class="heading"> <i class="fa fa-bar-chart-o"></i>Currency <small>Exchange </small> <span class="heading-right"><a href="index.html"><i class="fa fa-dashboard"></i> Dashboard</a> <small>&#58; Currency exchange </small> </span></div>
            <div class="widget-content padded text-center">
                <form id="msform" runat="server" action="javascript:void(0)" method="get" style=" margin:0px auto;">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <label>Business Currency</label>
                                    <select name="Seldpt" id="Seldpt" class="full-width freetrial">
                                        @if (ViewBag.AvailableCurrency != null)
                                        {
                                            foreach (var item in ViewBag.AvailableCurrency)
                                            {
                                                if (item.Text != null)
                                                {
                                                    <option value="@item.Value" selected="@item.Selected">
                                                        @item.Text.Trim()
                                                    </option>

                                                }
                                            }
                                        }
                                    </select>
                                </div>

                                @if (ViewBag.RateExCurrency != null)
                                {
                                    foreach (var item in ViewBag.RateExCurrency)
                                    {
                                        if (item.BaseCurrencyId > 0 )
                                        {
                                           <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                               <label>@item.ExchangeCurrencyName</label>
                                               <input type="text" id="txtRoomNumber" class="full-width" placeholder="Currency" runat="server">
                                           </div>

                                        }
                                    }
                                }
                               
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button type="submit" class="allbtnin full-width">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

