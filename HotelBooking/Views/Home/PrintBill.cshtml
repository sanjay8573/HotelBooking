@using PagedList.Mvc
@model PagedList.IPagedList<HotelBooking.Model.Reatraurant.BillingMaster>
@{
    ViewBag.Title = "Order List - Print";
}


<div class="row">
    <div class="col-sm-12">
        <div class="card widget-container">
            <div class="heading"> <i class="fa fa-bar-chart-o"></i>Order list <small>Print Bill</small> <span class="heading-right"><a href="index.html"><i class="fa fa-dashboard"></i> Dashboard</a> <small>&#58; Order List</small> </span></div>
            <div class="widget-content padded text-center">

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <input type="hidden" id="hdnBranchId" value="@ViewBag.BranchId" />
                                <label>Select Restaurant</label>
                                <select name="SelRestaurant" id="SelRestaurant" onchange="getBills(this.id);" class="full-width ddselect">
                                    @if (ViewBag.RestroCmoboModel != null)
                                    {
                                        foreach (var item in ViewBag.RestroCmoboModel)
                                        {
                                            if (item.Text != null)
                                            {
                                                <option value="@item.Value" selected="@item.Selected">
                                                    @item.Text.Trim()
                                                </option>

                                            }
                                        }
                                    }
                                </select>
                            </div>
                            @*<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                Search :
                                <input type="text" id="filterByOrderNumber" class="full-width allinputgo" placeholder="Order Number" autocomplete="off">
                            </div>*@
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                &nbsp;
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0 pull-left">
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 pull-left text-left">
                                @using (Html.BeginForm("GetAllOrdersToPrintBill", "Home", FormMethod.Get, new { id = "form1" }))
                                {
                                    <div id="pro_pag2">
                                        Show @Html.DropDownList("pSize", (IEnumerable<SelectListItem>)ViewBag.pSize, new { @class = "onlyinput" }) Records
                                    </div>
                                }
                            </div>
                            @*<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pull-left">
                                    Search
                                    <input type="text" id="txtUserName" class="onlyinput" placeholder="Search" runat="server">
                                </div>*@
                        </div>
                        <table class="table table-bordered">
                            <tbody>
                                <tr style="background: #eaeeef;">
                                    <td colspan="13" align="left" valign="middle"><div class="allheadingin">Today's Orders</div></td>
                                </tr>
                                <tr class="trthbgclr">
                                    <th class="text-center">#</th>
                                    <th class="text-center">Table Number</th>
                                    <th class="text-center">Room Number</th>
                                    <th class="text-center">Total Amount</th>
                                    
                                    <th class="text-center" colspan="2">Actions</th>
                                </tr>
                                @if (Model != null)
                                {
                                    var i = 1;
                                    foreach (var bk in Model)
                                    {
                                        <tr class="active">
                                            <td>@i</td>
                                            <td align="center" valign="middle">@bk.Tableid</td>
                                            <td align="center" valign="middle">@bk.TableNo_RoomNumber</td>
                                            <td align="center" valign="middle">@bk.TotalAmount</td>
                                           
                                            <td align="center" valign="middle"><a href="@Url.Action("PrintBillPrint","Home",new { @OrderId = bk.BillingId })">Print</a></td>

                                        </tr>
                                        i++;
                                    }
                                }

                                <tr>
                                    <td colspan="8">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <span class="float-left restextpagin">Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount </span>

                                            <div class="pagination pull-right">
                                                @Html.PagedListPager(Model, page => Url.Action("GetAllOrdersToPrintBill", new { page, pSize = ViewBag.PageSize, RestaurantId = Model[0].RestaurantId }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function getBills(id) {
        var selectedRestro = $("#"+id +" option:selected").val();
        console.log(selectedRestro);
        window.location.href = '/Home/GetAllOrdersToPrintBill?RestaurantId='+selectedRestro;
    }
</script>

