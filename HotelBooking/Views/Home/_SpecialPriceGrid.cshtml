@using PagedList.Mvc
@model PagedList.IPagedList<HotelBooking.Model.SPM>
<div class="row">
    <hr>

    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 table-responsive weblogtbl">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0 pull-left">
            <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12 pull-left text-left">
                @using (Html.BeginForm("_SpecialPriceGrid", "Home", FormMethod.Get, new { id = "form1" }))
                {
                    <div id="pro_pag2">
                        Show @* @Html.DropDownList("PageSize", new SelectList(new Dictionary<string, int> { { "5", 5 }, { "10", 10 }, { "20", 20 } }, "Key", "Value"), new { @class = "onlyinput", id = "RTpagesize" })*@
                        @Html.DropDownList("pSize", (IEnumerable<SelectListItem>)ViewBag.pSize, new { @class = "onlyinput" }) Records
                    </div>
                }
            </div>

        </div>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th width="3%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">#</a></th>
                    <th width="10%" align="left" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Date Range</a></th>
                    <th width="10%" align="left" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Title</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Mon</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Tue</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Wed</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Thu</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Fri</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Sat</a></th>
                    <th width="10%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Sun</a></th>
                    <th width="5%" align="center" valign="middle" bgcolor="#003556" class="clrwhit"><a href="#">Action</a></th>
                </tr>

                @if (Model != null)
                {
                    var i = 1;
                    foreach (var ps in Model)
                    {

                        <tr>
                            <td align="center" valign="middle">@i</td>
                            <td align="left" valign="middle">@ps.Title1</td>
                            <td align="left" valign="middle">@ps.DateRange</td>
                            <td align="left" valign="middle">@ps.MON1</td>
                            <td align="left" valign="middle">@ps.TUE1</td>
                            <td align="left" valign="middle">@ps.WED1</td>
                            <td align="left" valign="middle">@ps.THUR1</td>
                            <td align="left" valign="middle">@ps.FRI1</td>
                            <td align="left" valign="middle">@ps.SAT1</td>
                            <td align="left" valign="middle">@ps.SUN1</td>
                            <td align="left" valign="middle"><a href="#" class="closebtn deletebtn"><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                    }
                }
                <tr>
                    <td colspan="11">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <span class="float-left restextpagin">Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount entries</span>

                            <div class="pagination pull-right"> 
                                @Html.PagedListPager(Model, page => Url.Action("_SpecialPriceGrid", new { page, pageSize = @Model.PageSize }), PagedListRenderOptions.ClassicPlusFirstAndLast) 
                            </div>

                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
        $("#pSize").change(function () {
           

            $("#form1").submit();
        });

</script> 