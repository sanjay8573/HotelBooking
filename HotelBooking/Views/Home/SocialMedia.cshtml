@model HotelBooking.Model.SocialMedia.SocialMediaMaster
@{
    ViewBag.Title = "Social Media";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card widget-container">
            <div class="heading"> <i class="fa fa-object-group" aria-hidden="true"></i> Add Departments</div>
            <div class="widget-content padded text-center">

                @using (Html.BeginForm("SaveSocialMedia", "Home", FormMethod.Post, new { id = "msform", enctype = "multipart/form-data" }))
                {
                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pull-left">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-12 col-xs-12 pull-left">
                                <label for="edit-mail" class="form-required"> Name</label>
                                @Html.TextBoxFor(m => m.SocialmediaName, new { @class = "full-width ValidateInput", placeholder = "Department Name" })

                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-12 col-xs-12 pull-left">
                                <label for="edit-mail" class="form-required"> Name</label>
                                @Html.TextBoxFor(m => m.SocialMediaImage, new { @class = "full-width ValidateInput", placeholder = "Department Name" })

                            </div>
                        </div>
                        @Html.HiddenFor(model => model.isActive)
                        @Html.HiddenFor(model => model.SocialmediaId)
                        @Html.HiddenFor(model => model.BranchId)
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-left">
                            <label for="edit-mail" class="form-required">&nbsp;</label>

                            <ul class="unstyled">
                                <li>
                                    <input class="styled-checkbox" id="CHK_ACTIVE" type="checkbox" checked="@Model.isActive" name="CHK_ACTIVE">
                                    <label for="CHK_ACTIVE">Active</label>
                                </li>
                            </ul>
                        </div>
                    </div>


                    <input type="submit" name="prev" id="btnAddSM" class="prev action-button" onclick="return setData();" value="SAVE" runat="server">
                }

            </div>
        </div>
    </div>
</div>
